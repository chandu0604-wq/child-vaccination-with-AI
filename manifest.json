{
  "manifest_version": 3,
  "name": "Child Vaccination Management",
  "version": "1.0.2",
  "description": "Manage child vaccination schedules with biometric verification and SMS notifications",
  "permissions": [
    "storage",
    "camera",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://api.twilio.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Child Vaccination Management"
  },
  "background": {
    "service_worker": "sw.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "data:image/svg+xml;base64,",
    "48": "data:image/svg+xml;base64,",
    "128": "data:image/svg+xml;base64,"
  }
}
